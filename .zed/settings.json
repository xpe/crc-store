// https://zed.dev/docs/configuring-zed
{
  "soft_wrap": "editor_width",
  "wrap_guides": [80, 100],
  "project_panel": {
    "auto_fold_dirs": false
  },
  "lsp": {
    // https://rust-analyzer.github.io/manual.html#configuration
    "rust-analyzer": {
      "initialization_options": {
        "linkedProjects": [
          "Cargo.toml"
          // "fuzz/Cargo.toml"
        ],
        "rustfmt": {
          "extraArgs": ["+nightly"]
        }
      }
    }
  }
}
